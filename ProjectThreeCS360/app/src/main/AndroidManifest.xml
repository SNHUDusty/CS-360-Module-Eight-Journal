<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- SMS permission and telephony feature for notifications -->
    <uses-permission android:name="android.permission.SEND_SMS" />

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WeightTrackingApp">

        <activity
            android:name=".SetGoalActivity"
            android:exported="false" />

        <activity
            android:name=".AddWeightActivity"
            android:exported="false" />

        <activity
            android:name=".SmsPermissionActivity"
            android:exported="false"
            android:label="SMS Permission" />

        <activity
            android:name=".DashboardActivity"
            android:exported="false" />

        <!-- LOGIN ACTIVITY IS THE LAUNCH SCREEN -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>